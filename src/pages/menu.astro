---
import Layout from '../layouts/Layout.astro';
import menu from '../data/menu.json';
---

<Layout title="Menu">
  <div class="pt-24 pb-20">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl md:text-5xl font-display font-bold text-center mb-4">Our Menu</h1>
      <p class="text-gray-600 text-center mb-12 max-w-2xl mx-auto">
        Discover our authentic Thai dishes made with fresh ingredients and traditional recipes. All entr√©es can be prepared with your choice of chicken, beef, tofu, or shrimp.
      </p>

      <div class="text-center mb-12">
        <a
          href="https://thaichiliasianbistronc.kwickmenu.com/"
          class="bg-red-800 text-white px-8 py-3 rounded-full text-lg hover:bg-red-700 transition-colors inline-block"
        >
          Order Online
        </a>
      </div>

      <div class="space-y-12 p-4 bg-gray-400 rounded-lg">
        {menu.categories.map(category => (
          <details class="bg-white rounded-lg shadow-md p-8">
            <summary class="text-2xl font-display font-bold text-red-800 mb-6 cursor-pointer">
              {category.category}
            </summary>
            <div class="grid gap-6 mt-4">
              {category.items.map(item => (
                <div class="flex justify-between items-start">
                  <div class="flex-1">
                    <h3 class="text-lg font-semibold mb-1">{item.name}</h3>
                    <p class="text-gray-600">{item.description}</p>
                  </div>
                  <div class="ml-4">
                    <span class="text-lg font-semibold">${item.price}</span>
                  </div>
                </div>
              ))}
            </div>
          </details>
        ))}
      </div>

      <div class="mt-12 text-center">
        <p class="text-gray-600 mb-2">Spice levels can be adjusted to your preference</p>
        <p class="text-gray-600 mb-2">
          Consuming raw or undercooked meats, poultry, seafood, shellfish, or eggs may increase your risk of foodborne illness
        </p>
        <p class="text-gray-600">
          Please inform your server of any food allergies before ordering
      </div>
    </div>
  </div>
</Layout>