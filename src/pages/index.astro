---
import Layout from '../layouts/Layout.astro';
import full from '../assets/full.png';
import food1 from '../assets/food1.png';
import Image from 'astro/components/Image.astro';
---

<Layout title="Home">
  <div class="pt-16">
    <!-- Hero Section -->
    <section class="relative h-[80vh] flex items-center justify-center">
      <div class="absolute inset-0 z-0">
        <Image
          src={full}
          alt="Thai Food"
          width={full.width}
          height={full.height}
          class="w-full h-full object-cover"
        />
        <div class="absolute inset-0 bg-black/50"></div>
      </div>
      <div class="relative z-10 text-center text-white px-4">
        <h1 class="text-4xl md:text-6xl font-display font-bold mb-4">
          Thai Chili Asian Bistro
        </h1>
        <p class="text-xl md:text-2xl mb-8">Experience authentic Thai cuisine in Asheville</p>
        <a
          href="/menu"
          class="bg-red-800 text-white px-8 py-3 rounded-full text-lg hover:bg-red-700 transition-colors inline-block"
        >
          View Our Menu
        </a>
      </div>
    </section>

    <!-- Features Section -->
    <section class="py-20 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div class="text-center">
            <div class="w-16 h-16 mx-auto mb-4 bg-red-800 rounded-full flex items-center justify-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
              </svg>
            </div>
            <h3 class="text-xl font-display font-bold mb-2">Food</h3>
            <p class="text-gray-600">Thai recipes with modifications for America</p>
          </div>
          <div class="text-center">
            <div class="w-16 h-16 mx-auto mb-4 bg-red-800 rounded-full flex items-center justify-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
              </svg>
            </div>
            <h3 class="text-xl font-display font-bold mb-2">Location</h3>
            <p class="text-gray-600">Located on Hendersonville Road</p>
          </div>
        </div>
      </div>
    </section>

    <!-- About Section -->
    <section class="py-20">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
          <div>
            <Image
              src={food1}
              width={food1.width}
              height={food1.height}
              alt="Restaurant Interior"
              class="rounded-lg shadow-xl"
            />
          </div>
          <div>
            <h2 class="text-3xl md:text-4xl font-display font-bold mb-6">Welcome to Thai Chili</h2>
            <p class="text-gray-600 mb-6">
              Come and enjoy real Thai food in Asheville!
            </p>
            <p class="text-gray-600 mb-8">
              We are vegan and vegetarian friendly. We also offer gluten-free options.
            </p>
            <a
              href="tel:8285054224"
              class="bg-red-800 text-white px-8 py-3 rounded-full text-lg hover:bg-red-700 transition-colors inline-block"
            >
              Call to Order
            </a>
            <a
              href="https://thaichiliasianbistronc.kwickmenu.com/"
              class="bg-red-800 text-white px-8 py-3 rounded-full text-lg hover:bg-red-700 transition-colors inline-block"
            >
              Order Online
            </a>
          </div>
        </div>
      </div>
    </section>
  </div>
</Layout>